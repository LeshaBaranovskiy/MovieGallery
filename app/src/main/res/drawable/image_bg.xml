<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/colorForm" />
        </shape>
    </item>

    <item
        android:left="15dp"
        android:right="15dp"
        android:top="15dp"
        android:bottom="15dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/colorTextForm"/>
        </shape>
    </item>
</layer-list>