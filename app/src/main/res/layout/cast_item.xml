<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutDetailRating"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/layout_writer_cast_rectangle">

    <TextView
        android:id="@+id/textViewCastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textColor="@color/colorTextForm"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewCastImage"
        app:layout_constraintStart_toStartOf="@+id/imageViewCastImage"
        app:layout_constraintTop_toBottomOf="@id/imageViewCastImage" />

    <ImageView
        android:id="@+id/imageViewCastImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="Actor image"
        android:src="@drawable/cat"
        app:layout_constraintBottom_toTopOf="@id/textViewCastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>