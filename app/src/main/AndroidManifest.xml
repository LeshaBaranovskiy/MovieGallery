<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviegallery">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screens.detail.DetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.moviegallery.screens.list.MoviesListActivity"
                />
        </activity>
        <activity android:name=".screens.list.MoviesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.example.moviegallery.model.database.movies_entry"
            android:name=".model.database.movies_entry.MoviesContentProvider"/>
        <provider
            android:authorities="com.example.moviegallery.model.database.ratings_entry"
            android:name=".model.database.ratings_entry.RatingsContentProvider"/>
    </application>

</manifest>